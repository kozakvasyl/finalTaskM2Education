            <a class="<?= ($_lang->getId() == $block->getCurrentStoreId()) ? 'active' : ''; ?>" href="<?= $block->escapeUrl($block->getViewModel()->getTargetStoreRedirectUrl($_lang)) ?>">
                <?= $block->escapeHtml($_lang->getName()) ?>
            </a>
        <?php endforeach; ?>

    </div>
